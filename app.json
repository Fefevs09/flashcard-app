{
  "expo": {
    "name": "flashcard-app",
    "slug": "flashcard-app",
    "scheme": "your-app-scheme",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "experiments": {
      "tsconfigPaths": false
    },
    "splash": {
      "image": "./assets/ios/splash-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D243D"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/android/drawable-hdpi/splash-logo.png",
        "backgroundColor": "#0D243D"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-router"]
  }
}
